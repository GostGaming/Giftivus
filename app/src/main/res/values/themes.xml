<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Giftivus" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/giftivus_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/giftivus_red</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Giftivus.NoActionBar" parent="Theme.Giftivus">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Giftivus.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Giftivus.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.Giftivus.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/dark_gray</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/giftivus_icon_192</item>
        <item name="postSplashScreenTheme">@style/Theme.Giftivus</item>

    </style>
</resources>